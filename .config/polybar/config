[colors]

background     = #080808
foreground     = #080808

[bar/mybar]

bottom = false

fixed-center = true

height = 18
width = 100%
padding-right = 1
padding-left = 1
border-size = 3
border-color = ${colors.background}

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Siji:pixelsize=20;
font-1 = TamzenForPowerline:pixelsize=14;
font-2 = Symbols Nerd Font:size=10;

modules-left = battery pulseaudio wired-network wireless-network
modules-right = memory cpu temperature backlight date
modules-center = bspwm

tray-position = right
tray-maxsize = 16

module-margin-left = 1
module-margin-right = 1

[module/bspwm]
type                      = internal/bspwm
label-focused             = x
label-focused-padding     = 2
label-focused-foreground  = #b2b2b2
label-occupied            = -
label-occupied-padding    = 2
label-occupied-foreground = #b2b2b2
label-urgent              = !
label-urgent-padding      = 2
label-urgent-foreground   = #ff5454
label-empty               = .
label-empty-padding       = 2
label-empty-foreground    = #b2b2b2
pin-workspaces = true

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
label =  %percentage%%
label-foreground = #b2b2b2
label-padding = 1

[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_00_1b.0.analog-stereo

format-volume = <label-volume>
label-muted = 
