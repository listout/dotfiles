label-volume-foreground = #b2b2b2
label-muted-foreground = #b2b2b2
label-muted-padding = 1
label-volume-padding = 1

[module/battery]
type = internal/battery

battery = BAT0
adapter = ADP0

poll-interval = 5

full-at = 99

time-format = %H:%M

label-discharging =  %percentage%% %time%
label-charging =  %percentage%%
label-full =  %percentage%%
label-charging-foreground = #b2b2b2
label-discharging-foreground = #b2b2b2
label-full-foreground = #b2b2b2
label-charging-padding = 1
label-full-padding = 1
label-discharging-padding = 1

format-discharging = <label-discharging>
format-full = <label-full>
format-charging = <label-charging>

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label>
label =  %percentage%%
label-foreground = #b2b2b2
label-padding = 1

[module/memory]
type = internal/memory
interval = 3
format = <label>
label =  %gb_used%
label-foreground = #b2b2b2
label-padding = 1

[module/date]
type = internal/date
label =  %date% %time%
interval = 1.0
date = %d-%m-%Y
time = %I:%M
date-alt = %A, %d %B %Y
time-alt = %I:%M:%S
format = <label>
label-foreground = #b2b2b2
label-padding = 1

[module/wired-network]
type = internal/network
