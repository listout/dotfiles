{
	"suggest.autoTrigger": "always",
	"session.directory": "~/.config/nvim/sessions",
	"session.saveOnVimLeave": false,
	"diagnostic.refreshOnInsertMode": true,
	"suggest.noselect": false,
	"suggest.snippetIndicator": "â–º",
	"suggest.floatEnable": false,
	"diagnostic.messageTarget": "float",
	"signature.target": "echo",
	"suggest.echodocSupport": true,
	"coc.preferences.hoverTarget": "float",
	"coc.preferences.currentFunctionSymbolAutoUpdate": true,
	"suggest.acceptSuggestionOnCommitCharacter": true,
	"snippets.extends": {
		"cpp": [
			"c"
		],
		"html": [
			"php"
		],
		"php": [
			"html"
		],
		"markdown.pandoc": [
			"tex"
		]
	},
	"coc.source.word.enable": true,
	"coc.source.word.filetypes": [
		"markdown",
		"latex",
		"tex",
		"markdown.pandoc"
	],
	"coc.source.dictionary.enable": true,
	"coc.source.dictionary.filetypes": [
		"markdown",
		"latex",
		"tex",
		"markdown.pandoc"
	],
	"coc.preferences.formatOnSaveFiletypes": [
		"c",
		"cpp",
		"json",
		"python",
		"java",
		"html",
		"php"
	],
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
				"cc",
				"c++",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".git/",
				".hg"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				},
				"highlight": {
					"lsRanges": true
				}
			}
		}
	},
	"java.signatureHelp.enabled": true,
	"java.format.comments.enabled": false,
	"java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
	"latex.build.args": [
		"-pdf",
		"-interaction=nonstopmode",
		"-synctex=1",
		"-xelatex",
		"-output-directory=/tmp/latex"
	],
	"jedi.executable.command": "jedi-language-server",
	"jedi.jediSettings.autoImportModules": ["numpy", "cv2"],
	"diagnostic-languageserver.formatters": {
		"autopep8": {
			"command": "autopep8",
			"args": [ "-a", "-a", "-" ]
		}
	},
	"diagnostic-languageserver.formatFiletypes": {
		"python": ["autopep8"]
	}
}
