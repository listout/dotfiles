## General options
set header_cache = "~/.cache/mutt"
set imap_check_subscribed
set imap_keepalive = 300
unset imap_passive
set mail_check = 60
set mbox_type=Maildir
set editor=nvim
set sendmail="/usr/bin/msmtp"

bind generic,alias,attach,browser,editor,index,compose,pager,pgp,postpone ':' noop

## Colorscheme
source "~/.config/mutt/neonwolf/mutt-colors-neonwolf-256.muttrc"

## Mappings
source "~/.config/mutt/mappings"

set send_charset="utf-8"

set mailcap_path=~/.config/mutt/mailcap
auto_view text/html
alternative_order text/enriched text/plain text/html text
auto_view text/markdown
auto_view text/markdown.pandoc
set implicit_autoview=yes
set sort=threads
set sort_aux=last-date-received

# status bar, date format, finding stuff etc.
set status_chars = " *%A"
set status_format = "[ Folder: %f ] [%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]%>â”€%?p?( %p postponed )?"
set date_format = "%d.%m.%Y %H:%M"
set sort = threads
set sort_aux = reverse-last-date-received
set uncollapse_jump
set sort_re
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
set send_charset = "utf-8:iso-8859-1:us-ascii"
set charset = "utf-8"
set arrow_cursor = "no" # Change `color indicator` depending

## ACCOUNT1
source "~/.config/mutt/gmail_main"
folder-hook $folder 'source ~/.config/mutt/gmail_main'

