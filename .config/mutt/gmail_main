source "gpg -dq $HOME/Nextcloud/keepass_database/mutt_pass.gpg |"

## Receive options.
set imap_user=$my_userName@gmail.com
set imap_pass=$my_pass
set folder = imaps://$my_userName@imap.gmail.com:993
set spoolfile = +INBOX
unset record
set postponed="+[Gmail]/Drafts"

## Send options.
set smtp_url=smtps://$my_userName@gmail.com@smtp.gmail.com
set smtp_pass=$my_pass
set from=$my_userName@gmail.com

## Connection options
set ssl_force_tls = yes
unset ssl_starttls

set header_cache = "~/.config/mutt/cache/headers"
set message_cachedir = "~/.config/mutt/cache/bodies"
set certificate_file = "~/.config/mutt/certificates"
set move = no

# Custom Header
set edit_headers = yes
unmy_hdr *
#unset use_from
#unset use_domain
unset user_agent
## Custom Mail-User-Agent ID.
my_hdr User-Agent: Every email client sucks, this one just sucks less.
## OS Info.
my_hdr X-Operating-System: `uname -s`, kernel `uname -r`

# Folder in which to put deleted emails
set trash='+Trash'
set trash='~/.config/mutt/Trash'

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=$my_userName@gmail.com imap_pass=$my_pass"

# vim:ft=muttrc
